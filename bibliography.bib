journal = {ACM SIGMOBILE Mobile Computing and Communications Review},
month = {dec},
number = {3},
pages = {33},
title = {{Are call detail records biased for sampling human mobility?}},
url = {http://dl.acm.org/citation.cfm?doid=2412096.2412101},
volume = {16},
year = {2012}
}
