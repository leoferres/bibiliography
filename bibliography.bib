author = {Louail, Thomas and Lenormand, Maxime and {Cantu Ros}, Oliva G. and Picornell, Miguel and Herranz, Ricardo and Frias-Martinez, Enrique and Ramasco, Jos{\'{e}} J. and Barthelemy, Marc},
