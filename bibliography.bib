arxivId = {1211.6014},
author = {Cs{\'{a}}ji, Bal{\'{a}}zs Cs. and Browet, Arnaud and Traag, V. A. and Delvenne, Jean-Charles and Huens, Etienne and {Van Dooren}, Paul and Smoreda, Zbigniew and Blondel, Vincent D.},
